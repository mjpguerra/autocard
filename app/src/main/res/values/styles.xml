<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SuccessTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/greenBackground</item>
        <item name="android:background">@color/greenBackground</item>
    </style>

    <style name="ErrorTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/redBackground</item>
        <item name="android:background">@color/redBackground</item>
    </style>

    <style name="Buttom_Panel_Operation" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_rectangle</item>
    </style>



</resources>
